        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="bck\background.jfif"></ImageBrush>
        </Grid.Background>
        <Border Opacity="0.7" Background="Black"></Border>
        
        <Label Foreground="White" FontWeight="DemiBold" FontSize="30" Content="username : " HorizontalAlignment="Left" VerticalAlignment="Top" Height="55" Width="161" Margin="239,162,0,0"/>
        <Label Foreground="White" FontWeight="DemiBold" FontSize="30" Content="password : " HorizontalAlignment="Left" VerticalAlignment="Top" Height="55" Width="161" Margin="239,217,0,0"/>

        <Label Name="showUser" Foreground="White" FontWeight="DemiBold" FontSize="30" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Height="55" Width="161" Margin="405,162,0,0"/>
